
@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>
<div class="container">
    <ul id="discussion"></ul>
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
</div>
@section scripts {

<!--Script references. -->
<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--Add script to update the page and send messages.-->
<script type="text/javascript">
    $(function () {
        // Declare a proxy to reference the hub.
        var chat = $.connection.chatHub;
        // Create a function that the hub can call to broadcast messages.
        chat.client.broadcastMessage = function (name, message, datetime) {
            var jDate = new Date(datetime);
            var hours = jDate.getHours() <= 9 ? '0' + jDate.getHours() : jDate.getHours();
            var minutes = jDate.getMinutes() <= 9 ? '0' + jDate.getMinutes() : jDate.getMinutes();
            var hourMinute = hours + ':' + minutes;

            // Html encode display name and message.
            var encodedName = $('<div />').text(name).html();
            var encodedMsg = $('<div />').text(message).html();
            // Add the message to the page.
            $('#discussion').append('<li><strong>(' + hourMinute
                + ')</strong>' + encodedName + ':&nbsp;&nbsp;' + encodedMsg + '</li>');
        };

        // Create a function to display the username and the hub can call to broadcast messages.
        chat.client.showAvailableUsers = function (availableUsers, datetime) {
            // Add the message to the page.
            $('#discussion').append('<li><strong>' + availableUsers + '</strong>&nbsp; available for chat! </li>');
        };

        // Create a function to display the username and the hub can call to broadcast messages.
        chat.client.showUserConnected = function (name, datetime) {
            // Add the message to the page.
            $('#discussion').append('<li><strong>' + name + '</strong>&nbsp;has connected! </li>');
        };

        // Create a function to display the username and the hub can call to broadcast messages.
        chat.client.showUserDisconnected = function (name, datetime) {
            // Add the message to the page.
            $('#discussion').append('<li><strong>' + name + '</strong>&nbsp;has disconnected! </li>');
        };

        // Set initial focus to message input box.
        $('#message').focus();

        // Handles the Enter Key
        $("#message").keyup(function (event) {
            if (event.keyCode == 13) {
                $("#sendmessage").click();
            }
        });
        var userName = '@(User.Identity.Name)';

        // Start the connection.
        $.connection.hub.start().done(function () {
            $('#sendmessage').click(function () {
                // Call the Send method on the hub.
                chat.server.send(userName, $('#message').val());
                // Clear text box and reset focus for next comment.
                $('#message').val('').focus();
            });
        });
    });
</script>
 }