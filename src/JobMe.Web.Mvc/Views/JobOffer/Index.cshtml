@model IEnumerable<JobMe.Web.Mvc.Models.JobOfferIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Load messages from server", "SaveUnseen")
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Applyed later than: @Html.TextBox("applyedOn") &nbsp;&nbsp; <input type="submit" value="Filter" />
    </p>
}
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Requester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyedOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Requester)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)<strong>(@item.TotalRead<span>/</span>@item.Total)</strong>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplyedOn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Apply", "Apply", new { id=item.Id })
        </td>
    </tr>
}

</table>
